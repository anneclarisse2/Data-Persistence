<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgone"
    android:orientation="vertical"
    tools:context=".UpdateBookActivity">
    <!--Edit text to enter course name-->
    <!--edit text to enter course duration-->
    <!--edit text to display course tracks-->

    <!--button for updating our course-->

    <EditText
        android:id="@+id/idEdtBookTitle"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:hint="Enter Book Title"
        android:textColorHint="#83D5651E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <EditText
        android:id="@+id/idEdtBookYear"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_margin="10dp"
        android:hint="Enter Year of Publication"
        android:textColorHint="#83D5651E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.335" />

    <EditText
        android:id="@+id/idEdtBookAuthor"
        android:layout_width="271dp"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:hint="Enter Author's Name"
        android:textColorHint="#83D5651E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <Button
        android:id="@+id/idBtnUpdateBook"
        android:layout_width="164dp"
        android:layout_height="51dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg"
        android:text="Update Book"
        android:textAllCaps="false"
        android:textColor="#815C34"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.554" />

    <Button
        android:id="@+id/idBtnDelete"
        android:layout_width="162dp"
        android:layout_height="54dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg"
        android:text="Delete Book"
        android:textAllCaps="false"
        android:textColor="#815C34"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664" />


</androidx.constraintlayout.widget.ConstraintLayout>
